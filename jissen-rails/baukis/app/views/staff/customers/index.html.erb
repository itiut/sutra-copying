<% @title = '顧客管理' %>
<h1><%= @title %></h1>

<div class="table-wrapper">
  <div class="links">
    <%= link_to '新規登録', :new_staff_customer %>
  </div>

  <%= render 'search_form' %>

  <%= paginate @customers %>

  <table class="listing">
    <tr>
      <th>氏名</th>
      <th>フリガナ</th>
      <th>メールアドレス</th>
      <th>生年月日</th>
      <th>性別</th>
      <th>アクション</th>
    </tr>
    <%= render partial: 'customer', collection: @customers %>
  </table>

  <%= paginate @customers %>

  <div class="links">
    <%= link_to '新規登録', :new_staff_customer %>
  </div>
</div>
